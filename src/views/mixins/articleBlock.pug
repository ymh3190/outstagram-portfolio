mixin articleBlock(post)
    article
        div.article-header
            div 
                div
                    canvas
                    a(href=routes.user(post.creator.username)) 
                        img(src="../../static/59950687.png", alt="profile photo" width="50" height="50")
                div
                    div
                        span
                            a(href=routes.user(post.creator.username))=post.creator.username
                    div
                        a(href="") location 
            div
                button
                    i.fas.fa-ellipsis-h
        div.article-main
            div
                if post.type == "image"
                    img(src=post.url, alt="post" style="width:400px; height:400px; object-fit: fill;")
                else if post.type == "video"
                    video(src=post.url, alt="post" style="width:400px; height:400px; object-fit: fill;" controls)
        div.article-footer
            section
                div
                    span
                        i.far.fa-heart
                    span
                        i.far.fa-comment
                    span
                        i.far.fa-map
                div 
                    span
                        i.far.fa-bookmark
            section
                a(href=routes.likeBy)
                    span 123,456,789
                    | likes
            div.comments
                div.post-comment-root
                    h2=post.creator.username
                    span=post.caption
                div.post-comment-root
                    if post.comments.length > 1
                        a(href="") View all 
                            span=post.comments.length
                            | comments
                if post.comments.length > 0
                    div.post-comment-root
                        div.comment
                            span=post.comments[0].creator.username
                            span=post.comments[0].text
                        span.heart
            div.datetime
                -
                    const seconds = Math.floor((new Date - post.createdAt)/1000)
                    const minutes = Math.floor(seconds/60) 
                    const hours = Math.floor(minutes/60)
                    const days = Math.floor(hours/24)
                    const weeks = Math.floor(days/7)
                    const months = Math.floor(weeks/4)
                a(href="")
                    if seconds < 60
                        if seconds == 1
                            time #{seconds} second ago
                        else
                            time #{seconds} seconds ago
                    else if minutes < 60
                        if minutes == 1
                            time #{minutes} minute ago
                        else
                            time #{minutes} minutes ago
                    else if hours < 24
                        if hours == 1
                            time #{hours} hour ago
                        else 
                            time #{hours} hours ago
                    else if days < 7
                        if days == 1
                            time #{days} day ago
                        else 
                            time #{days} days ago
                    else if weeks < 4
                        if weeks == 1
                            time #{weeks} week ago
                        else 
                            time #{weeks} weeks ago
                    else if months < 12
                        if months == 1
                            time #{months} month ago
                        else 
                            time #{months} months ago
            section
                form(method="post")
                    button
                        i.far.fa-smile
                    textarea(name="", placeholder="Add a comment...")
                    button(type="submit") Post
